<h1><%= @post.title %></h1>

<p>
  <%= @post.body %>
</p>

<div>
  <%= link_to 'Back', posts_path %>
  <%= link_to 'Edit', edit_post_path(@post) %>
  <%= link_to 'Destroy', @post, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
</div>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
